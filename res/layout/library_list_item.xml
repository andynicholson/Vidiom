<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:id="@+id/text5intro" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/text5intro" />

		<TextView android:id="@+id/text5" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:id="@+id/text6intro" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/text6intro" />

		<TextView android:id="@+id/text6" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

	</LinearLayout>




	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView android:id="@+id/text1intro" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/text1intro" />


		<TextView android:id="@android:id/text1" android:textSize="16sp"
			android:textStyle="bold" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />


	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:id="@+id/text2intro" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/text2intro" />

		<TextView android:id="@android:id/text2" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:id="@+id/text3intro" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/text3intro" />

		<TextView android:id="@+id/text3" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

	</LinearLayout>

	<!--  Host details -->

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:id="@+id/text4intro" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/text4intro" />

		<TextView android:id="@+id/text4" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

	</LinearLayout>


	<ImageView android:id="@+id/videoThumbnailimageView"
		android:src="@drawable/icon" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:layout_margin="3dip"></ImageView>

</LinearLayout>
